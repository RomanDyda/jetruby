- if current_user && current_user.lunchesadmin?
	%h3 Weekday:
	%strong= @thursday.name_of_the_dish
	%p= @thursday.description
	%p= @thursday.price

	=link_to 'Edit', edit_weekdays_thursday_path(@thursday), class: 'btn btn-success'

	=link_to 'Back', weekdays_thursdays_path, class: 'btn btn-success'

	=link_to 'Destroy', weekdays_thursday_path(@thursday), class: 'btn btn-success', method: :delete, data: { confirm: 'Are you sure?' }