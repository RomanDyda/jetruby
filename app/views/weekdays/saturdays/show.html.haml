- if current_user && current_user.lunchesadmin?
	%h3 Weekday:
	%strong= @saturday.name_of_the_dish
	%p= @saturday.description
	%p= @saturday.price

	=link_to 'Edit', edit_weekdays_saturday_path(@saturday), class: 'btn btn-success'

	=link_to 'Back', weekdays_saturdays_path, class: 'btn btn-success'

	=link_to 'Destroy', weekdays_saturday_path(@saturday), class: 'btn btn-success', method: :delete, data: { confirm: 'Are you sure?' }